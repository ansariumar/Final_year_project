<%- include('_layouts/header'); %>

  <section id="home">
    <div class="container">
      <h5>ECO RECYCLE </h5>
      <h1><span>WELCOME </span>TO GREEN WORLD</h1>
      <p>Join us today and become the reason for
        <br>this green world!</p>
      <a href="/auth/login">
        <button class="buy-btn">  Sign In  </button>
      </a>
    </div>
  </section>

  <section id="brands" class="container">
    <div class="row m-0 py-5">
      <img class="ig-fluid col-lg-2 col-md-4 col-6" src="#" alt="">
      <img class="ig-fluid col-lg-2 col-md-4 col-6" src="#" alt="">
