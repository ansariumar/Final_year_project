  <%- include('_layouts/header'); %>

 <div class="row">
   <h2 class="page-header"><%=product.title%></h2>
   <div class="col-xs-12 col-md-5">
     <img src="/product_images/<%=product.id%>/<%=product.image%>" class="spi" alt="">
     <br>
   </div>
 
 <div class="col-xs-12 col-md-7">
   <p><%=product.desc%></p>
   <!-- <%=loggedIn%> -->
   <%if(loggedIn==true){%>
    <p>$<%=parseFloat(product.price).toFixed(2)%></p>

    <%}else{%>
      <p>Must be logged in to purchase item</p>
      <%}%>
	<p> <a href="/cart/add/<%=product.slug%>">Add To Cart</a> </p>

 </div>
 <div class="col-xs-12">
   <ul class="gallery">
    <% galleryImages.forEach(function(item){ %>
      <%if(item!="thumbs"){%>  
          
      <li>
        <a data-fancybox="gallery" href="/product_images/<%=product.id%>/gallery/<%=item%>">
          <img src="/product_images/<%=product.id%>/gallery/thumbs/<%=item%>" width="100" height="100">
        </a>

      </li>
      <%}%> 
  
      <% }); %>
   </ul>

 </div>
</div>

<%- include('_layouts/footer'); %>
